<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxWidth="600.0" prefHeight="720.0" prefWidth="1280.0" spacing="10.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.projetoquiz.quiz.ProjetoQuiz.RegisterController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Tela de Cadastro">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="usernameField" maxWidth="350.0" promptText="Digite um nome de usuário" />
      <TextField fx:id="emailField" maxWidth="350.0" promptText="Digite seu e-mail" />
      <PasswordField fx:id="passwordField" maxWidth="350.0" promptText="Digite uma senha" />
      <PasswordField fx:id="confirmPasswordField" maxWidth="350.0" promptText="Confirme sua senha" />
      <TextField fx:id="securityQuestionField" maxWidth="350.0" promptText="Digite uma pergunta de segurança" />
      <TextField fx:id="securityAnswerField" maxWidth="350.0" promptText="Digite a resposta da pergunta" />
      <Button onAction="#handleRegisterButtonAction" prefWidth="120.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Cadastrar">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
      <Button onAction="#handleBackButtonAction" prefWidth="120.0" text="Voltar para o Login" />
   </children>
</VBox>