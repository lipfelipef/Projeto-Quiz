<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxWidth="500.0" spacing="15.0"
      style="-fx-background-color: linear-gradient(to bottom, #eef2f3, #dfe9f3);"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.projetoquiz.quiz.ProjetoQuiz.RegisterController"
      prefWidth="800.0" prefHeight="600.0">

   <padding>
      <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
   </padding>

   <children>
      <!-- Título -->
      <Label text="Cadastre-se para jogar!" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="30.0"/>
         </font>
         <effect>
            <DropShadow radius="6.0" color="#00000033"/>
         </effect>
         <VBox.margin>
            <Insets bottom="20.0"/>
         </VBox.margin>
      </Label>

      <!-- Campos -->
      <TextField fx:id="usernameField" promptText="Digite um nome de usuário." maxWidth="300.0"
                 style="-fx-background-radius: 10; -fx-padding: 8; -fx-border-color: #ccc; -fx-border-radius: 10;"/>
      <TextField fx:id="emailField" promptText="Digite seu e-mail." maxWidth="300.0"
                 style="-fx-background-radius: 10; -fx-padding: 8; -fx-border-color: #ccc; -fx-border-radius: 10;"/>
      <PasswordField fx:id="passwordField" promptText="Digite sua senha." maxWidth="300.0"
                     style="-fx-background-radius: 10; -fx-padding: 8; -fx-border-color: #ccc; -fx-border-radius: 10;"/>
      <PasswordField fx:id="confirmPasswordField" promptText="Digite sua senha novamente." maxWidth="300.0"
                     style="-fx-background-radius: 10; -fx-padding: 8; -fx-border-color: #ccc; -fx-border-radius: 10;"/>
      <PasswordField fx:id="pinField" promptText="Crie um PIN de 4 dígitos (opcional)" maxWidth="300.0"
                     style="-fx-background-radius: 10; -fx-padding: 8; -fx-border-color: #ccc; -fx-border-radius: 10;"/>

      <!-- Botão Azul padrão -->
      <Button onAction="#handleRegisterButtonAction" text="Cadastrar conta" textFill="white" maxWidth="200.0"
              style="-fx-background-color: linear-gradient(to right, #4facfe, #00f2fe);
                     -fx-background-radius: 20; -fx-padding: 10 20; -fx-font-size: 16px;">
         <font>
            <Font name="System Bold" size="16.0"/>
         </font>
         <effect>
            <DropShadow radius="4.0" color="#00000044"/>
         </effect>
         <VBox.margin>
            <Insets top="15.0"/>
         </VBox.margin>
      </Button>

      <!-- Botão Voltar (cinza igual ao Recuperação de Senha) -->
      <Button onAction="#handleBackButtonAction" text="Retornar ao início de sessão" textFill="#2c3e50" maxWidth="220.0"
              style="-fx-background-color: linear-gradient(to right, #bdc3c7, #ecf0f1);
                     -fx-background-radius: 20; -fx-padding: 8 16; -fx-font-size: 14px;">
         <font>
            <Font name="System Bold" size="14.0"/>
         </font>
         <effect>
            <DropShadow radius="4.0" color="#00000033"/>
         </effect>
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
      </Button>
   </children>
</VBox>
