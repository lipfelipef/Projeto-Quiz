<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: linear-gradient(to bottom, #eef2f3, #dfe9f3);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.projetoquiz.quiz.ProjetoQuiz.RankingController">
    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
    </padding>
    <children>
        <Label text="Ranking dos Campeões">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
            <effect>
                <DropShadow color="#00000055" radius="8.0" />
            </effect>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        
        <HBox alignment="CENTER_LEFT" maxWidth="800.0" style="-fx-padding: 0 15 0 15;">
            <children>
                <Label text="USUÁRIO">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <Pane HBox.hgrow="ALWAYS" />
                <Label text="PONTUAÇÃO">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox fx:id="rankingContainer" alignment="TOP_CENTER" spacing="10.0" />
            </content>
        </ScrollPane>
        
        <Button fx:id="backButton" onAction="#handleBackButtonAction" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(to right, #4facfe, #00f2fe); -fx-background-radius: 10; -fx-font-weight: bold; -fx-font-size: 16px;" text="Voltar" textFill="WHITE">
            <effect>
                <DropShadow color="#00000044" radius="4.0" />
            </effect>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>