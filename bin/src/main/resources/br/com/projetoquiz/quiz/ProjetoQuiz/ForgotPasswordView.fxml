<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxWidth="600.0" prefHeight="720.0" prefWidth="1280.0" spacing="15.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.projetoquiz.quiz.ProjetoQuiz.ForgotPasswordController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Recuperação de Senha">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <VBox fx:id="searchPane" alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Digite seu nome de usuário para continuar" />
            <TextField fx:id="usernameField" maxWidth="300.0" promptText="Nome de usuário" />
            <Button onAction="#handleSearchUserAction" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="Buscar" />
         </children>
      </VBox>
      <VBox fx:id="resetPane" alignment="CENTER" managed="false" spacing="10.0" visible="false">
         <children>
            <Label text="Sua pergunta de segurança é:" />
            <Label fx:id="securityQuestionLabel" text="[A pergunta de segurança aparecerá aqui]">
               <font>
                  <Font name="System Italic" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="securityAnswerField" maxWidth="300.0" promptText="Digite sua resposta secreta" />
            <PasswordField fx:id="newPasswordField" maxWidth="300.0" promptText="Digite sua nova senha" />
            <Button fx:id="resetPasswordButton" onAction="#handleResetPasswordAction" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Redefinir Senha" />
         </children>
      </VBox>
      <Label fx:id="statusLabel" />
      <Button onAction="#handleBackButtonAction" text="Voltar para o Login" />
   </children>
</VBox>