<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.projetoquiz.quiz.ProjetoQuiz.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Login do Quizzz">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" maxWidth="300.0" promptText="Digite seu usuário" />
      <TextField fx:id="emailField" maxWidth="300.0" promptText="Digite seu e-mail" />
      <PasswordField fx:id="passwordField" maxWidth="300.0" promptText="Digite sua senha" />
      <Button onAction="#handleLoginButtonAction" prefHeight="40.0" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Entrar" />
      <VBox alignment="CENTER" spacing="5.0">
         <children>
            <Hyperlink onAction="#handleRegisterLinkAction" text="Não tem uma conta? Cadastre-se." />
            <Hyperlink onAction="#handleForgotPasswordLinkAction" text="Esqueci a minha senha" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>