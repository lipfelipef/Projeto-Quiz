<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.projetoquiz.quiz.ProjetoQuiz.RankingController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Ranking dos Campeões">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>
        <TableView fx:id="rankingTable" maxWidth="800.0">
            <columns>
                <TableColumn fx:id="playerColumn" prefWidth="600.0" text="Jogador" />
                <TableColumn fx:id="scoreColumn" prefWidth="200.0" style="-fx-alignment: CENTER;" text="Pontuação" />
            </columns>
        </TableView>
        <Button fx:id="backButton" onAction="#handleBackButtonAction" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="Voltar" />
    </children>
</VBox>