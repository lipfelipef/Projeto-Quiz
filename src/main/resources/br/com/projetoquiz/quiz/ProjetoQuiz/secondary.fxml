<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="30.0"
      style="-fx-background-color: linear-gradient(to bottom, #eef2f3, #dfe9f3);"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.projetoquiz.quiz.ProjetoQuiz.SecondaryController"
      prefWidth="800.0" prefHeight="600.0">

    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0" />
    </padding>

    <children>
        <!-- Título -->
        <Label text="Tela Secundária" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="34.0"/>
            </font>
            <effect>
                <DropShadow radius="6.0" color="#00000055"/>
            </effect>
        </Label>

        <!-- Botão no mesmo estilo da página Forgot -->
        <Button fx:id="secondaryButton" onAction="#switchToPrimary" text="Voltar para o Login" textFill="#2c3e50"
                style="-fx-background-color: linear-gradient(to right, #bdc3c7, #ecf0f1);
                       -fx-background-radius: 20; -fx-padding: 8 20; -fx-font-size: 14px;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
            <effect>
                <DropShadow radius="4.0" color="#00000033"/>
            </effect>
        </Button>
    </children>
</VBox>
