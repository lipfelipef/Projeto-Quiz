<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="25.0" prefHeight="720.0" prefWidth="1280.0"
      style="-fx-background-color: linear-gradient(to bottom, #f9f9f9, #e6ecf3);"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.projetoquiz.quiz.ProjetoQuiz.PrimaryController">

    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0" />
    </padding>

    <!-- Título -->
    <Label text="Quiz Animado - Desafie sua nostalgia!" textFill="#2c3e50">
        <font>
            <Font name="Segoe UI Bold" size="42.0" />
        </font>
        <effect>
            <DropShadow radius="6.0" color="#00000033"/>
        </effect>
    </Label>

    <!-- Descrição -->
    <Label wrapText="true" maxWidth="800.0"
           text="Os anos 2000 foram recheados de desenhos inesquecíveis — e agora é hora de provar que você realmente viveu essa era! No Quiz Animado, você vai testar sua memória e ver se ainda se lembra dos personagens, aberturas e aventuras que marcaram a infância de uma geração. Pronto para esse desafio nostálgico? Então bora jogar!"
           textFill="#34495e">
        <font>
            <Font size="16.0" />
        </font>
    </Label>

    <!-- Subtítulo -->
    <Label text="Acesse a sua conta para jogar!" textFill="#34495e">
        <font>
            <Font size="18.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <!-- Campos -->
    <TextField fx:id="usernameField" maxWidth="350.0" promptText="Digite seu nome de usuário."
               style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #bdc3c7;
                      -fx-padding: 10; -fx-font-size: 14px;"/>
    <TextField fx:id="emailField" maxWidth="350.0" promptText="Digite seu e-mail."
               style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #bdc3c7;
                      -fx-padding: 10; -fx-font-size: 14px;"/>
    <PasswordField fx:id="passwordField" maxWidth="350.0" promptText="Digite sua senha."
                   style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #bdc3c7;
                          -fx-padding: 10; -fx-font-size: 14px;"/>

    <!-- Botão -->
    <Button onAction="#handleLoginButtonAction" text="Iniciar sessão" textFill="white"
            style="-fx-background-color: linear-gradient(to right, #4facfe, #00f2fe);
                   -fx-background-radius: 10; -fx-font-weight: bold; -fx-font-size: 16px;"
            prefWidth="200.0" prefHeight="45.0">
        <effect>
            <DropShadow radius="4.0" color="#00000033"/>
        </effect>
    </Button>

    <!-- Feedback -->
    <Label fx:id="feedbackLabel" text="" textFill="#c0392b">
        <font>
            <Font name="Segoe UI" size="14.0" />
        </font>
    </Label>

    <!-- Links -->
    <VBox alignment="CENTER" spacing="8.0">
        <children>
            <Hyperlink onAction="#handleRegisterLinkAction"
                       style="-fx-text-fill: #2980b9; -fx-font-size: 14px;"
                       text="Não possui uma conta? Cadastre-se." />
            <Hyperlink onAction="#handleForgotPasswordLinkAction"
                       style="-fx-text-fill: #2980b9; -fx-font-size: 14px;"
                       text="Esqueci minha senha" />
        </children>
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
    </VBox>

</VBox>
