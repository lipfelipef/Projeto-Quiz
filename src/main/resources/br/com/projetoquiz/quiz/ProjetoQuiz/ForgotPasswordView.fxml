<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxWidth="600.0" prefHeight="720.0" prefWidth="1280.0" spacing="25.0"
      style="-fx-background-color: linear-gradient(to bottom, #f9f9f9, #e6ecf3);"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.projetoquiz.quiz.ProjetoQuiz.ForgotPasswordController">
   <padding>
      <Insets top="40.0" right="40.0" bottom="40.0" left="40.0" />
   </padding>
   <effect>
      <DropShadow radius="15.0" color="#00000022"/>
   </effect>
   <children>
      <!-- Título -->
      <Label text="Recuperação de Senha" textFill="#2c3e50">
         <font>
            <Font name="Segoe UI Bold" size="38.0" />
         </font>
         <effect>
            <DropShadow radius="6.0" color="#00000033"/>
         </effect>
      </Label>

      <!-- Etapa de busca de usuário -->
      <VBox fx:id="searchPane" alignment="CENTER" spacing="15.0" maxWidth="400.0">
         <children>
            <Label text="Digite seu nome de usuário para prosseguir." textFill="#34495e">
               <font>
                  <Font name="Segoe UI" size="16.0"/>
               </font>
            </Label>
            <TextField fx:id="usernameField" maxWidth="300.0" promptText="Nome de usuário"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #bdc3c7; -fx-padding: 8;"/>
            <Button onAction="#handleSearchUserAction" text="Buscar" textFill="white"
                    style="-fx-background-color: linear-gradient(to right, #4facfe, #00f2fe); -fx-background-radius: 10;">
               <font>
                  <Font name="Segoe UI Bold" size="14.0"/>
               </font>
               <effect>
                  <DropShadow radius="4.0" color="#00000033"/>
               </effect>
            </Button>
         </children>
      </VBox>

      <!-- Etapa de redefinição -->
      <VBox fx:id="resetPane" alignment="CENTER" spacing="15.0" maxWidth="400.0" managed="false" visible="false">
         <children>
            <Label fx:id="securityQuestionLabel" text="[Instrução do PIN aparecerá aqui]" textFill="#7f8c8d">
               <font>
                  <Font name="Segoe UI Italic" size="14.0"/>
               </font>
            </Label>
            <PasswordField fx:id="securityAnswerField" maxWidth="300.0" promptText="Digite seu PIN de 4 dígitos."
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #bdc3c7; -fx-padding: 8;"/>
            <PasswordField fx:id="newPasswordField" maxWidth="300.0" promptText="Digite sua nova senha."
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #bdc3c7; -fx-padding: 8;"/>
            <Button fx:id="resetPasswordButton" onAction="#handleResetPasswordAction" text="Restauração de Senha." textFill="white"
                    style="-fx-background-color: linear-gradient(to right, #56ab2f, #a8e063); -fx-background-radius: 10;">
               <font>
                  <Font name="Segoe UI Bold" size="14.0"/>
               </font>
               <effect>
                  <DropShadow radius="4.0" color="#00000033"/>
               </effect>
            </Button>
         </children>
      </VBox>

      <!-- Status -->
      <Label fx:id="statusLabel" textFill="#c0392b">
         <font>
            <Font name="Segoe UI" size="14.0"/>
         </font>
      </Label>

      <!-- Voltar -->
      <Button onAction="#handleBackButtonAction" text="Retornar ao início de sessão" textFill="#2c3e50" maxWidth="220.0"
              style="-fx-background-color: linear-gradient(to right, #bdc3c7, #ecf0f1);
                     -fx-background-radius: 20; -fx-padding: 8 16; -fx-font-size: 14px;">
         <font>
            <Font name="Segoe UI Bold" size="14.0"/>
         </font>
         <effect>
            <DropShadow radius="4.0" color="#00000033"/>
         </effect>
      </Button>
   </children>
</VBox>
