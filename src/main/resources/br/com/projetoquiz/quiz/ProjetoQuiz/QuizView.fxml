<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: linear-gradient(to bottom, #eef2f3, #dfe9f3);"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.projetoquiz.quiz.ProjetoQuiz.QuizController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20.0"
              style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-width: 0 0 1 0;">
            <children>
                <Label fx:id="questionCounterLabel" text="Questão: 1 / 12" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="30.0" />
                    </HBox.margin>
                </Label>
                <VBox HBox.hgrow="ALWAYS" />
                <Label fx:id="scoreLabel" text="Placar: 0" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="30.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>

                <!-- Tela do Quiz -->
                <VBox fx:id="quizPane" alignment="CENTER" spacing="40.0">
                    <children>
                        <Label fx:id="questionLabel" text="[Aqui vai a pergunta do desenho animado]"
                               textFill="#2c3e50" wrapText="true">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                            <effect>
                                <DropShadow color="#00000033" radius="4.0" />
                            </effect>
                        </Label>

                        <GridPane hgap="20.0" vgap="20.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Button fx:id="optionButton1" onAction="#handleOptionClick"
                                        style="-fx-background-color: #4a90e2; -fx-background-radius: 20; -fx-padding: 10 20; -fx-font-size: 16px; -fx-text-fill: white;"
                                        text="Opção A"
                                        GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <effect>
                                        <DropShadow color="#00000044" radius="4.0" />
                                    </effect>
                                </Button>

                                <Button fx:id="optionButton2" onAction="#handleOptionClick"
                                        style="-fx-background-color: #4a90e2; -fx-background-radius: 20; -fx-padding: 10 20; -fx-font-size: 16px; -fx-text-fill: white;"
                                        text="Opção B"
                                        GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <effect>
                                        <DropShadow color="#00000044" radius="4.0" />
                                    </effect>
                                </Button>

                                <Button fx:id="optionButton3" onAction="#handleOptionClick"
                                        style="-fx-background-color: #4a90e2; -fx-background-radius: 20; -fx-padding: 10 20; -fx-font-size: 16px; -fx-text-fill: white;"
                                        text="Opção C"
                                        GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <effect>
                                        <DropShadow color="#00000044" radius="4.0" />
                                    </effect>
                                </Button>

                                <Button fx:id="optionButton4" onAction="#handleOptionClick"
                                        style="-fx-background-color: #4a90e2; -fx-background-radius: 20; -fx-padding: 10 20; -fx-font-size: 16px; -fx-text-fill: white;"
                                        text="Opção D"
                                        GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <effect>
                                        <DropShadow color="#00000044" radius="4.0" />
                                    </effect>
                                </Button>
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <!-- Tela de Fim de Jogo -->
                <VBox fx:id="endGamePane" alignment="CENTER" managed="false" spacing="30.0" visible="false">
                    <children>
                        <Label text="Partida encerrada!" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Label>
                        <Label fx:id="finalScoreLabel" text="Sua pontuação final: 1200" textFill="#34495e">
                            <font>
                                <Font name="System" size="24.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button fx:id="playAgainButton" onAction="#handlePlayAgainAction"
                                        prefHeight="50.0" prefWidth="200.0"
                                        style="-fx-background-color: linear-gradient(to right, #4facfe, #00f2fe);
                   -fx-background-radius: 10; -fx-font-weight: bold; -fx-font-size: 16px;"
                                        text="Jogar Novamente" textFill="white">
                                    <effect>
                                        <DropShadow color="#00000044" radius="4.0" />
                                    </effect>
                                </Button>
                                <Button fx:id="rankingButton" onAction="#handleRankingAction"
                                        prefHeight="50.0" prefWidth="200.0"
                                        style="-fx-background-color: linear-gradient(to right, #56ab2f, #a8e063);
                   -fx-background-radius: 10; -fx-font-weight: bold; -fx-font-size: 16px;"
                                        text="Ranking dos Campeões" textFill="white">
                                        <Font name="Segoe UI Bold" size="14.0"/>
                                        <DropShadow radius="4.0" color="#00000033"/>
                                    <effect>
                                        <DropShadow color="#00000044" radius="4.0" />
                                    </effect>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>

            </children>
        </StackPane>
    </center>

</BorderPane>
