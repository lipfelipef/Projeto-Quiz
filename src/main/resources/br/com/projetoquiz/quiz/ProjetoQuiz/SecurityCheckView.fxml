<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0"
      style="-fx-background-color: linear-gradient(to bottom, #eef2f3, #dfe9f3);"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.projetoquiz.quiz.ProjetoQuiz.SecurityCheckController"
      prefWidth="800.0" prefHeight="600.0">

   <padding>
      <Insets top="40.0" right="40.0" bottom="40.0" left="40.0" />
   </padding>

   <children>
      <!-- Título -->
      <Label text="Verificação em duas etapas" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="32.0"/>
         </font>
         <effect>
            <DropShadow radius="6.0" color="#00000033"/>
         </effect>
      </Label>

      <!-- Subtítulo corrigido e sem quebra -->
      <Label text="Para sua segurança, por favor, insira seu PIN de 4 dígitos."
             textFill="#34495e"
             wrapText="false"
             maxWidth="800.0"
             alignment="CENTER">
         <font>
            <Font name="System" size="16.0"/>
         </font>
      </Label>

      <!-- Campo PIN -->
      <PasswordField fx:id="pinField"
                     alignment="CENTER"
                     maxWidth="150.0"
                     promptText="PIN"
                     style="-fx-background-radius: 10;
                            -fx-border-radius: 10;
                            -fx-border-color: #ccc;
                            -fx-padding: 8;"/>

      <!-- Botão Confirmar -->
      <Button onAction="#handleConfirmAction"
              text="Concluído"
              textFill="white"
              maxWidth="200.0"
              style="-fx-background-color: linear-gradient(to right, #4facfe, #00f2fe);
                     -fx-background-radius: 20;
                     -fx-padding: 10 20;
                     -fx-font-size: 16px;">
         <font>
            <Font name="System Bold" size="16.0"/>
         </font>
         <effect>
            <DropShadow radius="4.0" color="#00000044"/>
         </effect>
      </Button>

      <!-- Status -->
      <Label fx:id="statusLabel" textFill="#c0392b">
         <font>
            <Font name="System" size="14.0"/>
         </font>
      </Label>
   </children>
</VBox>
